@model JustCare_MB.Dtos.UsersIndexDto


<br />
<div class="container p-4 border">
    <div class="row pd-2">
        <div class="col">
            <h1 class="text-primary">User List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="User" asp-action="CreateUserRegister" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create new User</a>
        </div>
    </div>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name, id or email: <input type="text" asp-for="SearchTerm" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <table class="table">

        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Age
                </th>
                <th>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Age</td>
                    <td>
                        @* <a asp-controller="User" asp-action="Edit" asp-route-villaId="@item.Id" class="btn btn-success"> <i class="bi bi-pencil-square">Edit User</i> </a> *@
                        <a asp-action="Edit" asp-route-id="@item.Id" 
                        class="btn btn-success"> <i class="bi bi-pencil-square">
                            Edit User</i> </a>


                        <div class="col-5">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <input type="submit" value="Delete" 
                                    class="btn btn-danger form-control" />
                            </form>
                        </div>


                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>





