@model IEnumerable<JustCare_MB.Dtos.AppointmentBookedDtos.AppointmentBookedDtos>


<br />
<div class="container p-4 border">
    <div class="row pd-2">
        <div class="col">
            <h1 class="text-primary">my appointments list (im paitent)</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="AppointmentBooked" asp-action="index" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new appointmentBooked</a>
        </div>
    </div>

    <table class="table">

        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    ArabicName
                </th>
                <th>
                    PatientUserId
                </th>
                <th>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                        <td>@item.Date</td>
                        <td>@item.ArabicName</td>
                    
                    <td>@item.PatientUserId</td>

                    <td>
                        @* <a asp-controller="User" asp-action="Edit" asp-route-villaId="@item.Id" class="btn btn-success"> <i class="bi bi-pencil-square">Edit User</i> </a> *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"> <i class="bi bi-pencil-square">Edit Appointment Booked</i> </a>


                        <div class="col-5">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <input type="submit" value="Delete" class="btn btn-danger form-control" />
                            </form>
                        </div>

                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>





