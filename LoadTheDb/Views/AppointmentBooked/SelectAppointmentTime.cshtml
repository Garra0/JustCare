@model JustCare_MB.Dtos.AppointmentBookedDtos.CreateAppointmentBookedDto

<form method="post" asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">booking the appointment</h1>
        <hr />
        <input hidden asp-for="AppointmentId" />

        problem name: @Model.CategoryName
        <hr />
        Date of the appointment: @Model.Date

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="Image" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Note" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="AppointmentBooked" class="btn-primary btn form-control">Back to Category list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}




