                            <form asp-action="Accepted_Rejected" asp-route-id="@item.PatientUser.Id" asp-route-status="Accepted">
                                <input type="submit" value="Accept" class="btn btn-success" />
                            </form>
                        </div>

                        <div class="col-5">
                            <form asp-action="Accepted_Rejected" asp-route-id="@item.PatientUser.Id" asp-route-status="Rejected">
                                <input type="submit" value="Reject" class="btn btn-danger form-control" />
