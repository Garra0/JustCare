    <table class="table">

        <thead>
            <tr>
                <th>
                    Images
                </th>
                <th>
                    Note
                </th>
                <th>
                    Patient Number Phone
                </th>
                <th>
                    Category name
                </th>
                <th>
                    Date
                </th>
                <th>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Image</td>
                    <td>@item.Note</td>
                    <td>@item.PatientUser.PhoneNumber</td>
                    <td>@item.Category.ArabicName</td>
                    <td>@item.Date</td>

                    <td>

